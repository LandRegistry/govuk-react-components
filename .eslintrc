{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb"
  ],
  "rules": {
    "semi": "off",
    "no-extra-semi": "warn",
    "react/jsx-filename-extension": "off",
    "react/destructuring-assignment": "off",
    "react/no-array-index-key": "off"
  },
  "settings": {
    "react": {
      "version": "16",
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      }
    }
  }
}
